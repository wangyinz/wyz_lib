BIN=migsimulation
PF=migsimulation.pf
SUBDIR=/contrib
#MAN1=migsimulation.1
ldlibs=-lseispp -ltrvltm -lbrttutil $(TRLIBS) $(DBLIBS)  -L$(BOOSTLIB)\
               -lperf -lgclgrid -lpwmig 

ANTELOPEMAKELOCAL = $(ANTELOPE)/contrib/include/antelopemake.local
include $(ANTELOPEMAKE)  	
include $(ANTELOPEMAKELOCAL)

OBJS=migsimulation.o SimplePSPrimarySynthetic.o PointSourcePSSynthetic.o SphericalRayPathArray.o vectorcls.o normal.o
#OBJS=migsimulation.o SimplePSPrimarySynthetic.o
LIBS=-I ~/boost_1_46_1

CXX=g++-4.8
CXXFLAGS = $(CCOMMON) $(DBG)  $(cflags) $(CEXTRA) -I$(ANTELOPE)/local/include -I$(ANTELOPE)/include -I$(XINCLUDE) $(DCFLAGS)  $(LIBS) -I$(BOOSTINCLUDE) -O3


$(BIN) : $(OBJS)
	$(RM) $@
	$(CXX) $(CXXFLAGS) -o $@ $(OBJS) $(LDFLAGS) $(LDLIBS)

